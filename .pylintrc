[MASTER]
extension-pkg-whitelist=PyQt6,PyQt5
ignore-paths = venv

[REPORTS]
output-format=colorized

[MESSAGES CONTROL]
disable=
  missing-module-docstring,
  missing-class-docstring,
  missing-function-docstring,
  redefined-outer-name,
  import-outside-toplevel,
  broad-except,
  unused-argument,
  invalid-name,
  line-too-long,

